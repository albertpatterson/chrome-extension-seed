{
    "name": "chrome-extension-seed",
    "version": "1.0.0",
    "manifest_version": 2,
    "browser_action": {
        "default_title": "Chrome Extension Seed",
        "default_popup": "popup/popup.html"
    },
    "background": {
        "scripts": [
            "background/background.js",
            "background/chromereload.js"
        ],
        "persistent": false
    },
    "content_scripts": [
        {
            "matches": ["https://*/*", "http://*/*"],
            "js": ["injected/injected.js"]
        }
    ]
}